#!/usr/bin/with-contenv bash
mkdir /root/.ssh; echo -e "Host github.com\n\tStrictHostKeyChecking no\n" >> ~/.ssh/config; echo $GITHUB_SSHKEY | sed -e "s/-----BEGIN OPENSSH PRIVATE KEY-----/&\n/"    -e "s/-----END OPENSSH PRIVATE KEY-----/\n&/"    -e "s/\S\{64\}/&\n/g"\ > /root/.ssh/id_rsa; chown -R root:root /root/.ssh; chmod -R 600 /root/.ssh/id_rsa